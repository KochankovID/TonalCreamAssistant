@startuml
skinparam component {
    FontColor          black
    AttributeFontColor black
    FontSize           17
    AttributeFontSize  15
    AttributeFontname  Droid Sans Mono
    BackgroundColor    #6A9EFF
    BorderColor        black
    ArrowColor         #222266
}

node "Server"{
    [HTTP_Server] -up- [CV]
    database DB
    HTTP_Server -up- DB
    HTTP_Server -up- [Admin_pannel]
}


node "Front"{
    [Web] -up- HTTP_Server
    [Mobile] -up- HTTP_Server
}

actor Client1
actor Client2

Client1 -up- Web
Client2 -up- Mobile

actor Admin

Admin -left- Admin_pannel
@enduml